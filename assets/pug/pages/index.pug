extends ../layout/layout.pug
block vars
    -title= 'Trang chu'

block main
    section.swiper.mySwiper.slider-container
        .pre-btn
            button.pre-btn
                i.fa-solid.fa-chevron-left
        .nxt-btn
            button.nxt-btn
                i.fa-solid.fa-chevron-right
        .swiper-wrapper.slider
           .swiper-slide.card-slider
               +film("./images/slide1.jpg","Glass Onion: A Knives Out Mystery","2022","139 m","7.9")   
           .swiper-slide.card-slider
               +film("./images/slide2.jpg","Violent Night","2022","112 m","9.2")
