               +film("./images/slide5.jpg","Guillermo del Toro's Pinocchio","2021","120 m","5")  
           .swiper-slide.card-slider
               +film("./images/slide6.jpg","The Guardians of the Galaxy Holiday Special","2021","120 m","9")
           .swiper-slide.card-slider
               +film("./images/slide7.jpg","Wednesday","2022","120 m","9") 
           .swiper-slide.card-slider
               +film("./images/slide8.jpg","Troll","2021","120 m","6")          
